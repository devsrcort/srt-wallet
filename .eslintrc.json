{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "indent": ["error", "tab"],
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "localStorage": true,
    "fetch": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
